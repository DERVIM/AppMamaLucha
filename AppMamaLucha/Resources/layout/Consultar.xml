<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_marginTop="30dp" 
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp" 
    android:layout_marginBottom="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView android:text="@string/venta" 
        android:textSize="25dp" 
        android:fontFamily="monospace" 
        android:textStyle="italic|bold"
        android:textAlignment="center" 
        android:textColor="@color/colorAccent" 
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:minWidth="25px"
        android:minHeight="25px" 
        android:id="@+id/txtVentas"/>
<Spinner android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="20dp" 
        android:id="@+id/spnProductos"/>
<EditText android:inputType="number"
        android:layout_marginTop="10dp" 
        android:hint="@string/Cantidad" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/edtCantidad"/>
<Button android:text="@string/Consultar" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_gravity="center" 
        android:id="@+id/btnConsultar"/>
<TextView android:text="@string/Cordobas" 
        android:layout_marginTop="20dp" 
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:id="@+id/txtRespuesta"/>
<TextView android:text="@string/Dolares" 
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/txtDolares"/>
</LinearLayout>
